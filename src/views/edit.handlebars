
<form class="form-inline" method="POST" action='/poll/{{poll.0.id}}'>
  
    <div class="form-row align-items-center w-100">
        <div class="col-auto">
            <label class="sr-only" for="name">Name</label>
            <input type="text" class="form-control form-control-lg mb-2" id="name" name="name" placeholder="Tu nombre caminante!!" value="{{poll.0.name}}" readonly>
        </div>
        <div class="col-auto">
            <label class="sr-only" for="email">Email</label>
            <input type="email" class="form-control form-control-lg mb-2" id="email" name="email" placeholder="Tu email" value="{{poll.0.email}}" readonly>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-success btn-lg mb-2">Actualizar encuesta</button>
        </div>
    </div>
    <div class="poll-line">
        <div class="gap" style="grid-column: span 3"></div>
        <h4>Vive</h4>
        <h4>White Walker</h4>
        <h4>Muere</h4>
    </div>
    {{#each personajes }}
    <div class="poll-line">
        <a target="_blank" rel="noopener noreferrer" href="{{url}}">
            <figure class="poll-line-figure">
                <img src="/public/img/{{img}}" alt="{{key}}" class="img-fluid rounded-circle">
                <div class="overlay-img rounded-circle"><span>+</span></div>
            </figure>
        </a>
        <h3>{{name}}</h3>
        <span class="poll-dotted"></span>
        <label for="rb{{key}}-a"><input type="radio" value="{{key}}-a" name="{{key}}" id="rb{{key}}-a" required><span></span></label>
        <label for="rb{{key}}-b"><input type="radio" value="{{key}}-b" name="{{key}}" id="rb{{key}}-b"><span></span></label>
        <label for="rb{{key}}-c"><input type="radio" value="{{key}}-c" name="{{key}}" id="rb{{key}}-c"><span></span></label>
    </div>
    {{/each}}


    <script>
        let radio = '';
        {{#each poll.0.votos}}
            radio = 'rb{{name}}-{{voto}}';
            document.querySelector(`#${radio}`).checked = true;
        {{/each}}
    </script>

</form>
